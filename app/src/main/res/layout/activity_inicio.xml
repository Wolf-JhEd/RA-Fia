<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondou"
    android:id="@+id/LinearL"
    android:layout_height="match_parent"
    tools:context=".Inicio">
    <!-- la posicion del imagen-->
    <!--
    android:layout_marginHorizontal
    android:layout_marginVertical
    -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="00dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/logocolor" />



    <TextView
        android:id="@+id/tvBienvenidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:layout_marginStart="00dp"
        android:layout_marginEnd="10dp"
        android:text="BIENVENIDOS"
        android:textAlignment="center"
        android:textColor="#8C1028"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRafia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="370dp"
        android:layout_marginStart="00dp"
        android:layout_marginEnd="10dp"
        android:text="RA FIA"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textColor="#820405"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/tvNotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="620dp"
        android:layout_marginStart="00dp"
        android:layout_marginEnd="10dp"
        android:text="Asegúrate de estar en Universidad San Martín de Porres Facultad de Ingenieria y Arquitectura"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#983C45"
        android:textStyle="bold"
       />

    <Button
        android:id="@+id/btnSendToLogin"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginVertical="460dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="INICIAR"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#FFFF"
        android:background="@drawable/custom_bottom"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/btnSendToRegister"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginVertical="540dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="REGISTRAR"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#FFFF"
        android:background="@drawable/custom_bottom"
        android:textAllCaps="false"/>

</RelativeLayout>